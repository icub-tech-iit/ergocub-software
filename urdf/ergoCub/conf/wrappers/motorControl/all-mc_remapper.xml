        <elem name="head_joints1">( 0 3 0 3 )</elem>
        <elem name="left_arm_joints1">( 4 10 0 6 )</elem>
        <elem name="right_arm_joints1">( 11 17 0 6 )</elem>
        <elem name="torso_joints">( 18 20  0 2 )</elem>
        <elem name="left_leg_joints1">( 21 26  0 5 )</elem>
        <elem name="right_leg_joints1">( 27 32  0 5 )</elem>
    </paramlist>
    <param name="period"> 0.010 </param>
    <param name="joints"> 33 </param>
